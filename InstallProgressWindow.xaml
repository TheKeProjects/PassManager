<Window x:Class="PassManager.InstallProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PassManager - Installing"
        Height="200"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#1E1E1E"
        Topmost="True">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StatusText"
                   Grid.Row="0"
                   Text="Initializing..."
                   Foreground="White"
                   FontSize="16"
                   HorizontalAlignment="Center"/>

        <ProgressBar x:Name="ProgressBar"
                     Grid.Row="2"
                     Height="30"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Foreground="#007ACC"/>

        <TextBlock x:Name="DetailText"
                   Grid.Row="4"
                   Text=""
                   Foreground="#CCCCCC"
                   FontSize="12"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
