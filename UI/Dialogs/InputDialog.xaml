<Window x:Class="PassManager.UI.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="PromptText" Text="Enter value:"
                   FontSize="14" Margin="0,0,0,10"/>

        <TextBox Grid.Row="1" x:Name="InputTextBox" Height="35"
                 FontSize="13" Padding="8" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" Width="80" Height="30"
                    Margin="0,0,10,0" IsDefault="True" Click="OkButton_Click"
                    Background="#FF6B9BD1" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30"
                    IsCancel="True"
                    Background="#FFCCCCCC" Foreground="Black" BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
