<Window x:Class="PassManager.UI.AccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Details" Height="350" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Account Type -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Account Type:" FontSize="13" Margin="0,0,0,5"/>
            <TextBox x:Name="TypeTextBox" Height="35" FontSize="13" Padding="8"/>
        </StackPanel>

        <!-- Email/Username -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Email/Username:" FontSize="13" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Height="35" FontSize="13" Padding="8"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Password:" FontSize="13" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="PasswordTextBox" Grid.Column="0" Height="35"
                         FontSize="13" Padding="8" Margin="0,0,10,0"/>

                <Button x:Name="GenerateButton" Grid.Column="1" Content="ðŸŽ² Generate"
                        Width="100" Height="35" Click="GenerateButton_Click"
                        Background="#FF6B9BD1" Foreground="White" BorderThickness="0"
                        Cursor="Hand"/>
            </Grid>
        </StackPanel>

        <!-- Password History (if editing) -->
        <StackPanel Grid.Row="3" x:Name="HistoryPanel" Visibility="Collapsed" Margin="0,0,0,15">
            <TextBlock Text="Password History:" FontSize="13" Margin="0,0,0,5"/>
            <ScrollViewer Height="80" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="HistoryList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,2">
                                <TextBlock>
                                    <Run Text="{Binding Date}" FontSize="11" Foreground="Gray"/>
                                    <Run Text=" - " FontSize="11"/>
                                    <Run Text="{Binding Password}" FontSize="11"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Save" Width="100" Height="35"
                    Margin="0,0,10,0" IsDefault="True" Click="SaveButton_Click"
                    Background="#FF6B9BD1" Foreground="White" BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="35"
                    IsCancel="True"
                    Background="#FFCCCCCC" Foreground="Black" BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
