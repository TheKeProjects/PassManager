<Window x:Class="PassManager.UI.ThemeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Themes" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="ðŸŽ¨ Select Theme" FontSize="18" FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ThemesPanel"/>
        </ScrollViewer>

        <!-- Music Settings -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <CheckBox x:Name="MusicEnabledCheckBox" Content="Enable Theme Music"
                      FontSize="13" Checked="MusicEnabledCheckBox_Changed"
                      Unchecked="MusicEnabledCheckBox_Changed"/>
        </StackPanel>

        <Button Grid.Row="3" Content="Close" Width="100" Height="35"
                Margin="0,20,0,0" HorizontalAlignment="Right"
                IsCancel="True"
                Background="#FF6B9BD1" Foreground="White" BorderThickness="0"
                Cursor="Hand"/>
    </Grid>
</Window>
